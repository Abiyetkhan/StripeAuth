{
  "version": 2,
  "builds": [
    {
      "src": "index.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    {
      "src": "/ping",
      "methods": ["GET"],
      "dest": "index.php"
    },
    {
      "src": "/check_cc",
      "methods": ["POST"],
      "dest": "index.php"
    },
    {
      "src": "/process_cc",
      "methods": ["POST"],
      "dest": "index.php"
    },
    {
      "src": "/(.*)",
      "dest": "index.php"
    }
  ]
}
